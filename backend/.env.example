# Server
NODE_ENV=development
PORT=4000
API_URL=http://localhost:4000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=liveaudiocast
DB_USER=postgres
DB_PASSWORD=example

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# MediaSoup
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=127.0.0.1
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=49999
MEDIASOUP_NUM_WORKERS=4

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=liveaudiocast-recordings
S3_ENDPOINT=

# Firebase Cloud Messaging
FCM_PROJECT_ID=your-firebase-project-id
FCM_PRIVATE_KEY=your-firebase-private-key
FCM_CLIENT_EMAIL=your-firebase-client-email

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=LiveAudioCast <noreply@liveaudiocast.com>

# CDN
CDN_URL=https://cdn.example.com
HLS_ENABLED=false
HLS_THRESHOLD=100

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# Admin
ADMIN_EMAIL=admin@liveaudiocast.com
ADMIN_PASSWORD=change-this-password
